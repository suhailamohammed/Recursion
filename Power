#include <iostream>

using namespace std;

float power(float x, int n){
    
    if(n == 0){
        return 1;
    }

    if(n <= 1){
        return x;
    }
    return x * power(x, n-1);
    
}


int main()
{
    int y;
    float x;
    
    cout<<"Enter value for x: ";
    cin>>x;
    cout<<"Enter value for y: ";
    cin>>y;
    
    cout<<"power: "<<power(x,y);

    return 0;
}


